{
  "name": "Quizlet -> Learnalist",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": [
    "tabs",
    "contextMenus",
    "activeTab",
    "https://learnalist.net/*",
    "http://localhost/*",
    "http://localhost:1234/*",
    "https://quizlet.com/*",
    "https://www.cram.com/flashcards/*",
    "https://www.brainscape.com/flashcards/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://localhost:1234/*",
        "https://learnalist.net/*",
        "https://quizlet.com/*",
        "https://www.cram.com/flashcards/*",
        "https://www.brainscape.com/flashcards/*"
      ],
      "js": [
        "shared.js",
        "hello.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "shared.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Learnalist",
    "default_popup": "index.html#/start"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "quizlet.js",
    "cram.js",
    "brainscape.js",
    "config.json"
  ],
  "externally_connectable": {
    "matches": [
      "https://quizlet.com/*",
      "https://www.cram.com/flashcards/*",
      "https://www.brainscape.com/flashcards/*"
    ]
  }
}
